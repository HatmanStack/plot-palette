[run]
# Coverage.py configuration for Plot Palette

# Source code to measure
source = backend

# Files to omit from coverage
omit =
    */tests/*
    */test_*
    */__init__.py
    */node_modules/*
    */venv/*
    */.venv/*
    */site-packages/*
    backend/lambdas/*/test_*.py

# Branch coverage
branch = True

# Parallel mode for concurrent test runs
parallel = False

[report]
# Reporting options
precision = 2
show_missing = True
skip_covered = False
skip_empty = True

# Fail if coverage is below threshold
fail_under = 80

# Sort by statement count descending
sort = Cover

# Exclude lines from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Debug-only code
    def __repr__
    if self\.debug

    # Non-runnable code
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

    # Defensive programming
    raise AssertionError
    raise NotImplementedError

    # Type checking
    pass
    \.\.\.

    # Logger statements (optional - remove if you want to test logging)
    logger\.debug
    logger\.info
    logger\.warning

[html]
# HTML report configuration
directory = htmlcov
title = Plot Palette Test Coverage Report

[xml]
# XML report for CI/CD integration
output = coverage.xml

[json]
# JSON report for programmatic access
output = coverage.json
pretty_print = True
